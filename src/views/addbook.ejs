    <!-- book validation -->
    <script type="text/javascript">
      function validate(){
          var letternum = /^[A-Za-z0-9]+$/;
          var errtitle=document.getElementById("errtitle");
          var booktitle=document.getElementById("booktitle");
          if(letternum.test(booktitle.value)==1){
            errtitle.innerHTML="Correct format!!!";
            errtitle.style.color="skyblue";
              return true;
          }
          else if(letternum.test(booktitle.value)==0){
              errtitle.innerHTML="Should contain only letters and numbers";
              errtitle.style.color="orange";
              return false;
          }
      }
  
      </script>
      <script type="text/javascript">
        function authorname(){
            var letter = /^[A-Za-z]+$/;
            var errauthor=document.getElementById("errauthor");
            var author=document.getElementById("author");
            if(letter.test(author.value)==1){
              errauthor.innerHTML="Correct format!!!";
              errauthor.style.color="skyblue";
                return true;
            }
            else if(letter.test(author.value)==0){
                errauthor.innerHTML="Should contain only letters";
                errauthor.style.color="orange";
                return false;
            }
        }
    
        </script>
          <script type="text/javascript">
          function bookgenre(){
              var letter = /^[A-Za-z]+$/;
              var errgenre=document.getElementById("errgenre");
              var genre=document.getElementById("genre");
              if(letter.test(genre.value)==1){
                  errgenre.innerHTML="Correct format!!!";
                  errgenre.style.color="skyblue";
                  return true;
              }
              else if(letter.test(genre.value)==0){
                  errgenre.innerHTML="Only letters allowed";
                  errgenre.style.color="orange";
                  return false;
              }
          }
      
          </script>
